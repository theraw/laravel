# PHP 7.0
export max_execution_time="90"
export max_input_time="60"
export memory_limit="2048M"
export upload_max_filesize="500M"
export short_open_tag="On"
export output_buffering="Off"
export serialize_precision="200"
export display_errors="On"
export oldlog='error_reporting = E_ALL & ~E_DEPRECATED & ~E_STRICT'
export newlog='error_reporting = E_ALL & ~E_DEPRECATED & ~E_NOTICE'
export error_log="php_error.log"
export allow_url_fopen="On"
export allow_url_include="On"
export date_timezone="UTC"


# COMPOSER
